    <script>
        const classBoxes = document.querySelectorAll('.class-box');
        const changePreferenceYes = document.getElementById("yes");
        const berthPreferenceSelect = document.getElementById("berthPreference");

        classBoxes.forEach(box => {
            box.addEventListener('click', () => {
                classBoxes.forEach(b => b.classList.remove('selected'));
                box.classList.add('selected');
            });
        });

        document.getElementById("submit").addEventListener("click", function() {
            const selectedTrainClass = document.querySelector('.class-box.selected').textContent;
            const selectedBerthPreference = "Lower Berth"; 
            const changePreference = changePreferenceYes.checked ? "Yes" : "No";

            alert(Selected Train Class: ${selectedTrainClass}\nBerth Preference: ${selectedBerthPreference}\nChange Preference: ${changePreference});
        });
    </script>
