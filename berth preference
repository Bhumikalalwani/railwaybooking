            <option value="Lower" selected>Lower Berth</option>
        </select>

        <div id="changePreference">
            <label>Change Berth Preference?</label>
            <input type="radio" id="yes" name="changePreference" value="yes">
            <label for="yes">Yes</label>
            <input type="radio" id="no" name="changePreference" value="no" checked>
            <label for="no">No</label>
        </div>

        <button id="submit">Submit</button>
        <img src="C:\Users\91704\OneDrive\Desktop\html\dklogo.png" alt="Logo" id="logo">
